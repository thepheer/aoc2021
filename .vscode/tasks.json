{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "odin",
      "command": "make",
      "args": [
        "odin"
      ],
      "problemMatcher": {
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*)\\((\\d+):(\\d+)\\)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "group": "build"
    },
    {
      "label": "zig",
      "command": "make",
      "args": [
        "zig"
      ],
      "problemMatcher": {
        "fileLocation": [
          "relative",
          "${workspaceFolder}/zig"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(\\w+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "group": "build"
    },
    {
      "label": "kotlin",
      "command": "make",
      "args": [
        "kotlin"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
